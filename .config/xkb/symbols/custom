partial modifier_keys
xkb_symbols "caps_mod3" {
  replace key <CAPS> {
    [ VoidSymbol, Escape ]
  };
  modifier_map Mod3 { <CAPS> };
};

partial alphanumeric_keys
xkb_symbols "hjkl_mod3_arrow" {
    key <AC06> {
        type= "EIGHT_LEVEL",
        symbols[Group1]= [               h,               H,         hstroke, Hstroke, Left, VoidSymbol, Home, VoidSymbol ]
    };
    key <AC07> {
        type= "EIGHT_LEVEL",
        symbols[Group1]= [               j,               J,       dead_hook, dead_horn, Down, VoidSymbol, Next, VoidSymbol ]
    };
    key <AC08> {
        type= "EIGHT_LEVEL",
        symbols[Group1]= [               k,               K, kra, ampersand, Up, VoidSymbol, Prior, VoidSymbol ]
    };
    key <AC09> {
        type= "EIGHT_LEVEL",
        symbols[Group1]= [               l,               L, lstroke, Lstroke, Right, VoidSymbol, End, VoidSymbol ]
    };
};
